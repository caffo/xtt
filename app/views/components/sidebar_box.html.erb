<% content_for :sidebar do %>
<div id="sbox-<%= box.name %>" class="sbox">
  <div class="sbox-wrapper">
    <h3><%= box.title %></h3>
    <div class="sbox-content <%= box.content_classes %>">
      <%= box.content %>
    </div>
    <% unless box.footer.blank? %>
    <div class="sbox-footer"><%= box.footer %></div>
    <% end %>
  </div>
</div>
<% end %>