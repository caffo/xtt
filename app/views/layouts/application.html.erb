<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<title>XTT</title>
	<%= stylesheet_link_tag 'screen' %>
	<script src="javascripts/prototype.js" type="text/javascript" charset="utf-8"></script>
</head>
<body>
  <!-- header -->
  <div id="header">
    <div id="header-cnt">
      <h1><a href=""><img src="images/xtt-logo.png" alt="XTT (extra time tracking)" /></a></h1>
    </div>
    <div id="header-nav">
      <ul class="clearfix">
        <li><%= link_to 'Timeline', root_path %></li>
      </ul>
    </div>
    <div id="header-meta">
      Signed in as <%= link_to h(current_user.login), current_user %>
      <a href="#">Help</a>
      <%= link_to 'Log Out', logout_path %>
    </div>
  </div>
  <!-- /header -->
  <!-- wrapper -->
  <div id="wrapper">
    <!-- contents -->
    <div id="content" class="clearfix">
      <!-- main -->
      <div id="main">
        <%= yield %>
      </div>
      <!-- /main -->
    
      <!-- sidebar -->
      <div id="sidebar">
        <%= yield :sidebar %>    
      </div>
      <!-- /sidebar -->
    
    </div>
    <!-- /contents -->
  </div>
  <!-- /wrapper -->
</body>
</html>
