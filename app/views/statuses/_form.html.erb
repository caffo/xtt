<% status.project = @user.projects.latest if status.new_record? -%>
<% form_for status, 
	   :url    => status.new_record? ? user_statuses_path(@user) : status_path(status),
	   :method => status.new_record? ? :post : :put \
	 do |f| -%>
	<p>
		<%= f.select :project_id, Project.all.collect! { |p| [p.name, p.id] }, :include_blank => '[Out]' %>
		<%= f.text_field :message %>
	</p>
	<p><%= submit_tag :Update %></p>
<% end -%>