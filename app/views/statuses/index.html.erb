<h3>Recent Statuses for <%=h(@user ? @user.login : @project.name) %></h3>

<ul>
<% @record.statuses.each do |status| -%>
	<li>
		[<%= status.project? ? link_to(status.project.name, status.project) : :Out %>]
		<%=h status.message %>
		<% unless status.hours.zero? -%>(<%= pluralize status.hours, 'hour' %>)<% end -%>
	</li>
<% end -%>
</ul>

<%= render :partial => "statuses/form", :locals => { :status => @user.statuses.build } if @user %>