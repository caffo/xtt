    </ul>
  </div>
  <div class="mblock-footer">
    <a href="#">5 other people haven't worked today &raquo;</a>
  </div>
</div>

<% content_for :sidebar do %>
  <div class="sbox invite">
    Justin has invited you to join XTT.
  </div>
  
  <div class="sbox invite">
    Matt has invited you to join rails_fu.
  </div>
<% end %>

<% sidebar_box('projects') do |sbox| %>
  <% sbox.title = "Projects" %>
  <% sbox.content_classes = "nopad" %>
  <% sbox.footer = %(<a href="#">Archived Projects &raquo;</a>) %>
  <% sbox.content = capture do %>
  <ul class="text-list">
	<% current_user.projects.each do |project| -%>
    <li>
      <a href="#">
        <span class="ttl"><%= link_to_project project %></span>
        <span class="desc">20 hours today by 3 people</span>
      </a>
    </li>
	<% end -%>
  </ul>
  <% end %>
<% end %>