<h1><%=h @user.login %></h1>

<% if @status -%>
<p><strong>Currently...</strong> <%=h @status.message %> 
  <% if @status.project %>
    in <%= link_to h(@status.project.name), @status.project %>,
  <% else %>
    (Out),
  <% end %>
  <%= nice_timer_for @status %>
<% end -%>

<p><%= link_to 'Statuses', user_statuses_path(@user) %></p>

<div class="inset">
  <h2>Change to something else</h2>
<%= render :partial => "statuses/form", :locals => { :user => @user, :status => @user.statuses.build } %>
</div>